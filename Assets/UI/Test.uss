.game-ui-container {
    height: auto;
    align-self: stretch;
    align-content: center;
    align-items: stretch;
    justify-content: center;
    flex-shrink: 0;
    flex-grow: 1;
    margin-top: 2%;
    margin-right: 2%;
    margin-bottom: 2%;
    margin-left: 2%;
}

.game-space {
    flex-grow: 3;
    height: 75%;
    max-height: 75%;
    flex-shrink: 0;
    justify-content: flex-start;
    align-items: stretch;
    align-self: stretch;
    align-content: center;
}

.dialogue-container {
    width: 80%;
    height: auto;
    background-color: rgb(100, 37, 31);
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    visibility: visible;
    justify-content: center;
    align-items: center;
    align-self: center;
    align-content: center;
    bottom: auto;
    border-top-width: 15px;
    border-right-width: 15px;
    border-bottom-width: 15px;
    border-left-width: 15px;
    border-left-color: rgb(53, 30, 7);
    border-right-color: rgb(53, 30, 7);
    border-top-color: rgb(53, 30, 7);
    border-bottom-color: rgb(53, 30, 7);
    max-width: 80%;
    flex-shrink: 0;
    flex-grow: 1;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    flex-wrap: wrap;
}

.dialogue {
    font-size: 40px;
    flex-wrap: wrap;
    align-self: auto;
    align-content: auto;
    align-items: auto;
    justify-content: center;
    -unity-text-align: middle-left;
    width: auto;
    height: 100%;
    text-overflow: clip;
    white-space: pre-wrap;
    margin-top: 15px;
    margin-right: 15px;
    margin-bottom: 15px;
    margin-left: 15px;
}
