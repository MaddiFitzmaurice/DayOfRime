.game-ui-container {
    height: auto;
    align-self: stretch;
    align-content: center;
    align-items: stretch;
    justify-content: center;
    margin-top: 2%;
    margin-right: 2%;
    margin-bottom: 2%;
    margin-left: 2%;
    flex-grow: 1;
}

.ui-style {
    background-color: rgb(100, 37, 31);
    border-color: rgb(53, 30, 7);
    border-width: 15px;
    font-size: 40px;
}

.dialogue-container {
    width: 85%;
    height: 20%;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    visibility: visible;
    justify-content: space-around;
    align-items: center;
    align-self: center;
    align-content: center;
    bottom: auto;
    border-top-width: 15px;
    border-right-width: 15px;
    border-bottom-width: 15px;
    border-left-width: 15px;
    max-width: 85%;
    flex-shrink: 0;
    flex-grow: 1;
    flex-wrap: nowrap;
}

.dialogue {
    flex-wrap: wrap;
    align-self: auto;
    align-content: auto;
    align-items: auto;
    justify-content: center;
    -unity-text-align: middle-left;
    width: auto;
    height: 50%;
    text-overflow: clip;
    white-space: pre-wrap;
    margin-top: 15px;
    margin-right: 15px;
    margin-bottom: 15px;
    margin-left: 15px;
}

.button {
    width: 400px;
    height: 100px;
    border-radius: 15px;
}

.button:hover {
    background-color: rgb(131, 73, 58);
    border-color: rgb(53, 30, 7);
    scale: 1.05;
    border-left-color: rgb(166, 133, 99);
    border-right-color: rgb(166, 133, 99);
    border-top-color: rgb(166, 133, 99);
    border-bottom-color: rgb(166, 133, 99);
    color: rgb(166, 133, 99);
}

.button-container {
    flex-grow: 1;
    height: 50%;
    max-height: 75%;
    flex-shrink: 0;
    justify-content: space-around;
    align-self: stretch;
    align-content: center;
    flex-direction: row;
    align-items: center;
}

.next-icon {
    --unity-image: url("project://database/Assets/Art/UI/caret-down-solid.png?fileID=-5420981813264426003&guid=cae04cfd6096b8f48943083daa73d178&type=3#caret-down-solid_0");
    height: 12%;
    width: 5%;
}

.next-icon:hover {
    translate: 0 5px;
    transition: translate;
    --unity-image-tint-color: white;
}

.display {
    display: none;
    visibility: visible;
}
